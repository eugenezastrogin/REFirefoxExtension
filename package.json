  "bugs": {
    "url": "https://github.com/aethelz/REFirefoxExtension/issues"
  },
  "homepage": "https://github.com/aethelz/REFirefoxExtension#readme",
  "dependencies": {
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^78.0.1",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "web-ext": "^6.8.0"
  }
